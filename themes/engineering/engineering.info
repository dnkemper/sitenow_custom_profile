name        = engineering
description = A theme based on Radix.
screenshot  = screenshot.png
core        = 7.x

; Base - Radix
base theme  = radix

; Regions
regions[content] = Content
regions[main_nav] = Main Navigation
regions[header] = Header
regions[sidebar] = Sidebar
regions[footer] = Footer

; Breakpoints
breakpoints[xs] = (max-width: 767px)
breakpoints[sm] = (min-width: 768px) and (max-width: 991px)
breakpoints[md] = (min-width: 992px) and (max-width: 1199px)
breakpoints[lg] = (min-width: 1200px)

; CSS - General
stylesheets[all][]     = assets/css/engineering.style.css

; Javascript
scripts[] = assets/js/waypoints/jquery.waypoints.js
scripts[] = assets/js/waypoints/inview.js
scripts[] = assets/js/countUp/countUp.js
scripts[] = assets/js/radialIndicator/radialIndicator.js
scripts[] = assets/js/engineering.script.js

; Settings
; Set this to FALSE for development only.
settings[preprocess_css] = FALSE
