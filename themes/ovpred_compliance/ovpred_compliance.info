name        = ovpred_compliance
description = A theme based on Radix.
screenshot  = screenshot.png
core        = 7.x

; Base - Radix
base theme  = radix

; Regions
regions[content] = Content
regions[main_nav] = Main Navigation
regions[header] = Header
regions[sidebar] = Sidebar
regions[footer] = Footer

; Breakpoints
breakpoints[xs] = (max-width: 767px)
breakpoints[sm] = (min-width: 768px) and (max-width: 991px)
breakpoints[md] = (min-width: 992px) and (max-width: 1199px)
breakpoints[lg] = (min-width: 1200px)

; CSS - General
stylesheets[all][] = assets/css/ovpred_compliance.style.css

; Javascript
scripts[] = assets/js/ovpred_compliance.script.js

; Plugins
plugins[panels][layouts] = panel_layouts

; Settings
; Set this to FALSE for development only.
settings[preprocess_css] = FALSE
settings[toggle_logo] = 0
settings[toggle_slogan] = 0
settings[toggle_node_user_picture] = 0
settings[toggle_comment_user_picture] = 0
settings[toggle_comment_user_verification] = 0
settings[toggle_favicon] = 0
settings[toggle_main_menu] = 0
settings[toggle_secondary_menu] = 0
